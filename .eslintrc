{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "env": {
    "node": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "plugin:prettier/recommended", "prettier"],
  "rules": {
    "prettier/prettier": ["error", { "singleQuote": true, "noReturnAssign": false }],
    "@typescript-eslint/explicit-function-return-type": ["error", { "allowTypedFunctionExpressions": true }],
    "@typescript-eslint/explicit-member-accessibility": ["error", { "accessibility": "off" }],
    "@typescript-eslint/no-parameter-properties": ["error", { "allows": ["readonly", "private", "private readonly"] }]
  }
}
